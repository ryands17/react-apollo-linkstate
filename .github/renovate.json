{
  "extends": ["config:base"],
  "masterIssue": true,
  "automerge": true,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "packagePatterns": ["^@types/", "typesync"],
      "groupName": "ts-types"
    },
    {
      "packagePatterns": [
        "react",
        "react-dom",
        "react-scripts",
        "react-router-dom"
      ],
      "groupName": "react"
    },
    {
      "packagePatterns": ["^@graphql"],
      "groupName": "codegen"
    }
  ]
}
