{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.14.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.18.8",
    "@types/react": "18.3.25",
    "@types/react-dom": "18.3.7",
    "classnames": "2.5.1",
    "graphql": "16.11.0",
    "immer": "10.1.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.30.1",
    "react-scripts": "5.0.1",
    "todomvc-app-css": "2.4.3",
    "typescript": "5.9.3"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "6.0.0",
    "@graphql-codegen/typescript": "5.0.2",
    "@graphql-codegen/typescript-operations": "5.0.2",
    "@graphql-codegen/typescript-react-apollo": "^4.0.0",
    "@types/classnames": "2.3.4",
    "@types/react-router-dom": "5.3.3",
    "cypress": "9.7.0",
    "dotenv-cli": "8.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "npm-run-all2": "7.0.2",
    "prettier": "3.6.2",
    "typesync": "0.14.3"
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
