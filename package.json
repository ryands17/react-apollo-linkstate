{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.2.5",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.8",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "classnames": "2.2.6",
    "immer": "7.0.14",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "todomvc-app-css": "2.3.0",
    "typescript": "4.0.5"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.1",
    "@graphql-codegen/typed-document-node": "1.17.10",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-operations": "1.17.9",
    "@graphql-typed-document-node/apollo-client-3": "1.0.0",
    "@types/classnames": "2.2.10",
    "@types/graphql": "14.5.0",
    "@types/react-router-dom": "5.1.6",
    "cypress": "5.6.0",
    "dotenv-cli": "4.0.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "typesync": "0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
