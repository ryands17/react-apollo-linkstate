{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.10.8",
    "@types/jest": "29.5.5",
    "@types/node": "20.10.6",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "classnames": "2.5.1",
    "graphql": "16.9.0",
    "immer": "10.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.22.3",
    "react-scripts": "5.0.1",
    "todomvc-app-css": "2.4.3",
    "typescript": "5.5.3"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.5",
    "@graphql-codegen/typescript": "2.8.8",
    "@graphql-codegen/typescript-operations": "2.5.13",
    "@graphql-codegen/typescript-react-apollo": "^3.2.3",
    "@types/classnames": "2.3.1",
    "@types/react-router-dom": "5.3.3",
    "cypress": "9.7.0",
    "dotenv-cli": "7.4.2",
    "husky": "8.0.3",
    "lint-staged": "12.5.0",
    "npm-run-all2": "6.1.2",
    "prettier": "3.3.2",
    "typesync": "0.11.1"
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
