{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.4.10",
    "@types/jest": "26.0.24",
    "@types/node": "14.17.14",
    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "classnames": "2.3.1",
    "graphql": "15.5.1",
    "immer": "9.0.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3",
    "todomvc-app-css": "2.4.1",
    "typescript": "4.3.5"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.0.1",
    "@graphql-codegen/typed-document-node": "2.0.0",
    "@graphql-codegen/typescript": "2.0.0",
    "@graphql-codegen/typescript-operations": "2.0.1",
    "@graphql-typed-document-node/core": "3.1.0",
    "@types/classnames": "2.3.0",
    "@types/react-router-dom": "5.1.8",
    "cypress": "8.1.0",
    "dotenv-cli": "4.0.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "typesync": "0.8.0"
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
