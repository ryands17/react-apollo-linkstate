{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.5.6",
    "@types/jest": "27.4.0",
    "@types/node": "16.11.18",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "classnames": "2.3.2",
    "graphql": "16.2.0",
    "immer": "9.0.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.2.1",
    "react-scripts": "5.0.0",
    "todomvc-app-css": "2.4.2",
    "typescript": "4.5.4"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.5",
    "@graphql-codegen/typescript": "2.8.8",
    "@graphql-codegen/typescript-operations": "2.5.13",
    "@graphql-codegen/typescript-react-apollo": "^3.2.3",
    "@types/classnames": "2.3.1",
    "@types/react-router-dom": "5.3.2",
    "cypress": "9.2.0",
    "dotenv-cli": "4.1.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "typesync": "0.8.0"
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
