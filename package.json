{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.3.20",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.4",
    "@types/react": "17.0.9",
    "@types/react-dom": "17.0.6",
    "classnames": "2.3.1",
    "graphql": "15.5.1",
    "immer": "9.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3",
    "todomvc-app-css": "2.4.1",
    "typescript": "4.3.5"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.6",
    "@graphql-codegen/typed-document-node": "1.18.9",
    "@graphql-codegen/typescript": "1.22.4",
    "@graphql-codegen/typescript-operations": "1.18.3",
    "@graphql-typed-document-node/core": "3.1.0",
    "@types/classnames": "2.3.0",
    "@types/react-router-dom": "5.1.7",
    "cypress": "7.4.0",
    "dotenv-cli": "4.0.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "typesync": "0.8.0"
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
