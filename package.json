{
  "name": "apollo-local-state",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.0.2",
    "@types/jest": "26.0.8",
    "@types/node": "14.0.26",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "classnames": "^2.2.6",
    "immer": "^7.0.7",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.4.1",
    "todomvc-app-css": "^2.2.0",
    "typescript": "3.9.7"
  },
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "dotenv -- cypress open",
    "prebuild": "npm run generate:schema",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "npm run generate:schema -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.7",
    "@graphql-codegen/typed-document-node": "^1.17.4",
    "@graphql-codegen/typescript": "1.17.6",
    "@graphql-codegen/typescript-operations": "1.17.6",
    "@graphql-typed-document-node/apollo-client-3": "^1.0.0",
    "@types/classnames": "^2.2.9",
    "@types/graphql": "^14.2.3",
    "@types/react-router-dom": "^5.1.0",
    "cypress": "^4.11.0",
    "dotenv-cli": "^3.2.0",
    "husky": "^4.0.7",
    "lint-staged": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "typesync": "^0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
